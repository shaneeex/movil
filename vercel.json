{
  "version": 2,
  "functions": {
    "api/server.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api",
      "destination": "/api/server?path=/api"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/server?path=/api/$1"
    },
    {
      "source": "/p/(.*)",
      "destination": "/api/server?path=/p/$1"
    }
  ]
}
